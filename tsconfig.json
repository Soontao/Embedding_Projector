{
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "NodeNext",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "sourceMap": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "src/*_test.ts",
    "node_modules"
  ]
}
